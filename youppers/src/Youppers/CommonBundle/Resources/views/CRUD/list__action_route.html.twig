{% if admin.isGranted('VIEW', object) and admin.hasRoute(actions.route.name) %}
    <a href="{{ admin.generateObjectUrl(actions.route.name, object) }}" class="btn btn-sm btn-default view_link" title="{{ actions.label|default('action_route')|trans }}">
        <i class="glyphicon glyphicon-expand"></i>
        {{ actions.label|default('action_route')|trans }}
    </a>
{% else %}
	{{ 'Invalid route'|trans }}
{% endif %}
