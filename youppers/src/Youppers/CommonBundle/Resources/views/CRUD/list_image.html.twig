{% extends 'SonataAdminBundle:CRUD:base_list_field.html.twig' %}

{% block field %}
    {% if value %}
        {% if value.providerName == 'sonata.media.provider.image' %}
            {% thumbnail value, 'list' %}
        {% else %}
            {% thumbnail value, 'admin' %}
        {% endif %}
    {% endif %}
{% endblock %}
