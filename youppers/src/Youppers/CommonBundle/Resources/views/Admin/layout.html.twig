{% extends 'SonataAdminBundle::standard_layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}

    <link rel="stylesheet" href="{{ asset('bundles/sonataformatter/markitup/skins/sonata/style.css') }}" type="text/css" media="all" />
    <link rel="stylesheet" href="{{ asset('bundles/sonataformatter/markitup/sets/markdown/style.css') }}" type="text/css" media="all" />
    <link rel="stylesheet" href="{{ asset('bundles/sonataformatter/markitup/sets/html/style.css') }}" type="text/css" media="all" />
    <link rel="stylesheet" href="{{ asset('bundles/sonataformatter/markitup/sets/textile/style.css') }}" type="text/css" media="all" />
    <link rel="stylesheet" href="{{ asset('bundles/youpperscommon/font-awesome-4.3.0/css/font-awesome.min.css') }}" type="text/css" media="all" />
    <link rel="stylesheet" href="{{ asset('bundles/youpperscommon/youppers.css') }}" type="text/css" media="all" />
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script src="{{ asset('bundles/ivoryckeditor/ckeditor.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/sonataformatter/vendor/markitup-markitup/markitup/jquery.markitup.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/sonataformatter/markitup/sets/markdown/set.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/sonataformatter/markitup/sets/html/set.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/sonataformatter/markitup/sets/textile/set.js') }}" type="text/javascript"></script>
	<script src="{{ asset('bundles/sonatacore/vendor/eonasdan-bootstrap-datetimepicker/src/js/locales/bootstrap-datetimepicker.' ~ app.request.locale|replace({'_':'-'}) ~ '.js') }}"></script>    
{% endblock %}

{% block side_bar_after_nav %}
    <p class="text-center small" style="border-top: 1px solid #444444; padding-top: 10px"><a href="http://youppers.com" rel="noreferrer" target="_blank">Youppers</a><br><span style="color: #f6f6f6">{{ "now"|format_datetime }}</span></p>
{% endblock %}

{% block side_bar_before_nav %}
    {% if app.security.token and is_granted('ROLE_SUPER_ADMIN') %}
        {% set active = (app.request.attributes.get('_route') == 'youppers_product_dashboard_index') %}
        <ul class="sidebar-menu">
            <li class="treeview{% if active %} active{% endif %}">
                <a href="#">
                    <i class="fa fa-pie-chart"></i>
                    <span>Dashboard</span>
                    <i class="fa pull-right fa-angle-left"></i>
                </a>
                <ul class="treeview-menu{% if active %} active{% endif %}">
                    <li {% if active %}class="active"{%  endif %}><a href="{{ path('youppers_product_dashboard_index') }}"><i class="fa fa-angle-double-right"></i> Products</a></li>
                </ul>
            </li>
        </ul>
    {%  endif %}
{% endblock %}
