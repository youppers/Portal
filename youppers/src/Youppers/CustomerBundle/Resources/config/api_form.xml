<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="youppers.customer.api.form.type.session" class="Sonata\CoreBundle\Form\Type\DoctrineORMSerializationType">
            <tag name="form.type" alias="youppers_customer_api_form_session" />

            <argument type="service" id="jms_serializer.metadata_factory" />
            <argument type="service" id="doctrine" />
            <argument>youppers_customer_api_form_session</argument>
            <argument>Youppers\CustomerBundle\Entity\Session</argument>
            <argument>sonata_api_write</argument>
        </service>

    </services>
</container>
